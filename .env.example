# semantic-search-service Environment Configuration
# Copy this to .env and set ALL required values
# Usage: cp .env.example .env
#
# ⚠️  ALL VARIABLES ARE REQUIRED - NO DEFAULTS
# The service will fail to start if any are missing

# ===========================================
# NEO4J CONFIGURATION (REQUIRED)
# ===========================================
NEO4J_URL=bolt://ai-platform-neo4j:7687
NEO4J_URI=bolt://ai-platform-neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=devpassword

# ===========================================
# QDRANT CONFIGURATION (REQUIRED)
# ===========================================
QDRANT_URL=http://ai-platform-qdrant:6333

# ===========================================
# SERVICE CONFIGURATION (REQUIRED)
# ===========================================
SEMANTIC_SEARCH_PORT=8081
# Embedding model - must match Qdrant collection dimensions
SBERT_MODEL=all-MiniLM-L6-v2
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_GRAPH_SEARCH=true
ENABLE_HYBRID_SEARCH=true

# ===========================================
# CLIENT MODE (REQUIRED)
# ===========================================
# true = Use real Neo4j/Qdrant clients (PRODUCTION)
# false = Use fake/mock clients (testing only)
USE_REAL_CLIENTS=true
